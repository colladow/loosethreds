h1= user.username

ul#user_images
  - if(typeof user.images !== 'undefined')
    each image, id in user.images
      li.box
        a(href="/users/#{user.path}/images/#{id}")
          img(src="#{imagepath}#{image.path}")
        .buttons
          button.inline Copy
          - if(typeof currentUser !== 'undefined')
            form(method="post", action="/users/#{user.path}/images/#{id}")
              input(type="hidden", name="_method", value="delete")
              input(type="submit", name="submit", value="Delete")

.clear
br
include _upload_form
