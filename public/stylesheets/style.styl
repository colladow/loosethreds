@import reset
@import url(http://fonts.googleapis.com/css?family=Gudea:400,700,400italic)

.clear
  clear: both
.left
  float: left
.right
  float: right
.hidden
  display: none

body
  background-color: #333
  font: 14px 'Gudea', Helvetica, 'serif'
a
  color: #00B7FF
  display: block
h1
  color: #fff
  font-size: 30px
  font-weight: bold
h2
  color: #fff
  font-size: 20px
  margin: 20px 0

// header
header
  margin-left: 20px
  margin-bottom: 40px
  h1
    font-size: 90px
    font-weight: bold
    a, a:hover, a:active, a:visited
      color: #fff
      text-decoration: none
  nav
    font-size: 20px
    a
      display: block
      float: left
      margin-right: 168px

form
  display: block
  position: relative
  width: 600px
  input
    font-size: 20px
    &[type="text"], &[type="password"], &[type="file"]
      height: 35px
      margin-bottom: 10px
      padding-left: 15px
      width: 400px
    &[type="submit"], &[type="button"]
      display: block
      outline: none
      cursor: pointer
      text-align: center
      text-decoration: none
      font: 14px/100% Arial, Helvetica, sans-serif
      padding: .5em 2em .55em
      text-shadow: 0 1px 1px rgba(0,0,0,.3)
      -webkit-border-radius: .5em; 
      -moz-border-radius: .5em
      border-radius: .5em
      -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.2)
      -moz-box-shadow: 0 1px 2px rgba(0,0,0,.2)
      box-shadow: 0 1px 2px rgba(0,0,0,.2)
      color: #d9eef7
      border: solid 1px #0076a3
      background: #0095cd
      background: -webkit-gradient(linear, left top, left bottom, from(#00adee), to(#0078a5))
      background: -moz-linear-gradient(top,  #00adee,  #0078a5)
      &:hover
        background: #007ead
        background: -webkit-gradient(linear, left top, left bottom, from(#0095cc), to(#00678e))
        background: -moz-linear-gradient(top,  #0095cc,  #00678e)
        text-decoration: none
      &:active
        color: #80bed6
        background: -webkit-gradient(linear, left top, left bottom, from(#0078a5), to(#00adee))
        background: -moz-linear-gradient(top,  #0078a5,  #00adee)
        position: relative
        top: 1px
      &.inline
        display: inline-block
        margin-left: 10px

section#body
  margin-left: 20px
  h1
    margin-bottom: 20px
  h2
    margin-bottom: 10px

section#body
  .box
    float: left
    height: 400px
    margin-right: 10px
    position: relative
    width: 300px
    h2, a
      text-align: center
      width: 300px
    img
      border: none
      max-height: 360px
      max-width: 300px
  #user_images
    li.box
      form
        margin-top: 10px
        text-align: center
        width: 300px
        input[type="button"], input[type="submit"]
          display: inline-block
          
